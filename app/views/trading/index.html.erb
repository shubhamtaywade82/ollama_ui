<div data-controller="trading-chat" class="flex flex-col h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 px-4 py-3 shadow-sm">
    <div class="flex items-center justify-between max-w-7xl mx-auto">
      <div class="flex items-center gap-3">
        <div class="flex items-center gap-2">
          <a href="/" class="px-3 py-1.5 rounded-lg text-gray-600 hover:bg-gray-50 text-sm font-medium">Chat</a>
          <a href="/trading" class="px-3 py-1.5 rounded-lg bg-green-50 text-green-700 text-sm font-medium">Trading</a>
        </div>
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-green-500 to-blue-500 flex items-center justify-center">
          <span class="text-white font-bold text-sm">$</span>
        </div>
        <div>
          <h1 class="text-lg font-semibold text-gray-900">Trading Assistant</h1>
          <p class="text-xs text-gray-500" data-trading-chat-target="accountInfo">Connecting to broker...</p>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-right">
          <div class="text-xs text-gray-500">Account Value</div>
          <div data-trading-chat-target="accountValue" class="text-sm font-semibold text-gray-900">Loading...</div>
        </div>
      </div>
    </div>
  </header>

  <!-- Chat Messages -->
  <div class="flex-1 overflow-y-auto bg-gray-50" data-trading-chat-target="messagesContainer">
    <div class="max-w-4xl mx-auto px-4 py-6" data-trading-chat-target="messages">
      <div class="mb-4 flex justify-start">
        <div class="flex gap-3 max-w-[85%]">
          <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center bg-green-500">
            ðŸ¤–
          </div>
          <div class="bg-white text-gray-900 rounded-2xl px-4 py-3 shadow-sm">
            <div class="prose prose-sm max-w-none">
              <p>Welcome to your <strong>Trading Assistant</strong>! I can help you with:</p>
              <ul>
                <li>ðŸ“Š Get real-time quotes for Indian stocks</li>
                <li>ðŸ’° View account balance, positions & holdings</li>
                <li>ðŸ“ˆ Track portfolio performance</li>
                <li>ðŸ’¡ Get trading insights</li>
              </ul>
              <p><em>Try: "Get quote for RELIANCE" or "Show my holdings"</em></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Input Area -->
  <div class="border-t border-gray-200 bg-white">
    <form data-action="submit->trading-chat#submit" class="max-w-4xl mx-auto px-4 py-4">
      <div class="flex items-end gap-2">
        <div class="flex-1 relative">
          <textarea data-trading-chat-target="prompt" rows="1"
            placeholder="Ask about stocks, place orders, check account... (Enter to send, Shift+Enter for new line)"
            class="w-full rounded-xl border border-gray-300 px-4 py-3 pr-24 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none max-h-32"></textarea>
        </div>
        <button data-trading-chat-target="sendBtn" type="submit"
          class="rounded-xl bg-gradient-to-r from-green-500 to-blue-500 text-white px-4 py-3 hover:from-green-600 hover:to-blue-600 disabled:opacity-50 disabled:cursor-not-allowed transition shadow-md hover:shadow-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

