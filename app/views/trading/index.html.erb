<div data-controller="trading-chat theme" class="flex flex-col h-screen overflow-hidden" style="background-color: var(--bg-primary);">
  <!-- Compact Header -->
  <header class="header-refined sticky top-0 z-40">
    <div class="px-3 py-2">
      <div class="flex items-center justify-between gap-3">
        <div class="flex items-center gap-2 flex-1 min-w-0">
          <!-- Navigation -->
          <div class="flex items-center gap-1">
            <a href="/" class="px-2.5 py-1 text-small font-medium transition-colors hover:opacity-80" data-theme-text-secondary style="color: var(--text-secondary);">Chat</a>
            <a href="/trading" class="btn-base px-2.5 py-1 text-small font-medium" style="background-color: var(--accent-primary); color: white;">Trading</a>
          </div>

          <!-- Mode Toggle (Default: Analysis) -->
          <div class="flex items-center gap-1 ml-2" data-trading-chat-target="modeSelector">
            <button data-action="click->trading-chat#switchMode" data-mode="technical_analysis"
              class="btn-base px-2.5 py-1 text-small rounded-md font-medium focus-visible-ring"
              data-trading-chat-target="technicalAnalysisModeBtn"
              style="background-color: var(--accent-primary); color: white;">
              Analysis
            </button>
            <button data-action="click->trading-chat#switchMode" data-mode="trading"
              class="btn-base px-2.5 py-1 text-small rounded-md font-medium opacity-60 hover:opacity-80 focus-visible-ring"
              data-theme-bg-tertiary
              style="background-color: var(--bg-tertiary); color: var(--text-primary);"
              data-trading-chat-target="tradingModeBtn">
              Trading
            </button>
          </div>

          <!-- Model Selector -->
          <div class="ml-2 flex items-center gap-1.5">
            <select data-trading-chat-target="model" class="input-base px-2.5 py-1 text-small focus-visible-ring" style="min-width: 140px;">
              <option>Loading modelsâ€¦</option>
            </select>
            <span data-trading-chat-target="loading" class="text-small hidden flex items-center gap-1" data-theme-text-secondary style="color: var(--text-secondary);">
              <svg class="animate-spin h-3.5 w-3.5" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
          </div>

          <!-- Account Value (Compact) -->
          <div class="ml-auto flex items-center gap-3">
            <div class="text-right hidden sm:flex items-center gap-1.5">
              <span class="text-small" data-theme-text-secondary style="color: var(--text-secondary);">Balance:</span>
              <span data-trading-chat-target="accountValue" class="text-small font-semibold" data-theme-text-primary style="color: var(--text-primary);">Loading...</span>
            </div>


            <!-- Theme Switcher -->
            <div class="relative" data-controller="theme">
              <button data-action="click->theme#toggleDropdown" class="btn-base p-2 rounded-lg hover:scale-105 active:scale-95 focus-visible-ring" data-theme-bg-tertiary style="background-color: var(--bg-tertiary);" type="button" aria-label="Theme switcher">
                <svg class="w-4 h-4" data-theme-text-primary style="color: var(--text-primary);" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/></svg>
              </button>
              <div data-theme-dropdown class="hidden absolute right-0 mt-2 w-44 rounded-xl shadow-hover z-50 py-2 card-base" data-theme-bg-secondary>
                <button data-action="click->theme#switch" data-theme="light" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: linear-gradient(135deg, #f9fafb 50%, #111827 50%); border-color: var(--border-color);"></span>
                  Light
                </button>
                <button data-action="click->theme#switch" data-theme="dark" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full bg-gray-800 border" style="border-color: var(--border-color);"></span>
                  Dark
                </button>
                <button data-action="click->theme#switch" data-theme="blue" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: #3b82f6; border-color: var(--border-color);"></span>
                  Blue
                </button>
                <button data-action="click->theme#switch" data-theme="green" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: #10b981; border-color: var(--border-color);"></span>
                  Green
                </button>
                <button data-action="click->theme#switch" data-theme="purple" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: #9333ea; border-color: var(--border-color);"></span>
                  Purple
                </button>
                <button data-action="click->theme#switch" data-theme="orange" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: #f97316; border-color: var(--border-color);"></span>
                  Orange
                </button>
                <button data-action="click->theme#switch" data-theme="red" class="w-full px-4 py-2 text-left text-small hover:opacity-80 transition-colors flex items-center gap-2.5" data-theme-text-primary style="color: var(--text-primary);">
                  <span class="w-3.5 h-3.5 rounded-full border" style="background: #ef4444; border-color: var(--border-color);"></span>
                  Red
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content Area -->
  <div class="flex-1 flex overflow-hidden relative" style="background-color: var(--bg-primary);">
    <!-- Floating Expand Button (Shown when sidebar is collapsed) -->
    <button data-trading-chat-target="expandProgressBtn"
      data-action="click->trading-chat#toggleProgressSidebar"
      class="hidden fixed left-2 top-1/2 -translate-y-1/2 z-50 p-2 rounded-lg shadow-lg transition-all duration-200 hover:scale-110 active:scale-95"
      data-theme-bg-tertiary
      style="background-color: var(--bg-tertiary); border: 1px solid var(--border-color);"
      aria-label="Expand progress sidebar">
      <svg class="w-5 h-5" data-theme-text-primary style="color: var(--text-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
      </svg>
    </button>

    <!-- Collapsible Progress Sidebar (Left Side, Expanded by Default) -->
    <aside data-trading-chat-target="progressSidebar"
      class="w-72 card-base border-r flex flex-col transform transition-all duration-300 ease-in-out flex-shrink-0"
      style="border-color: var(--border-color);">
      <div class="p-4 border-b flex items-center justify-between" style="border-color: var(--border-color);">
        <h2 class="text-small font-semibold uppercase tracking-wide" data-theme-text-primary style="color: var(--text-primary);">Agent Progress</h2>
        <button data-action="click->trading-chat#toggleProgressSidebar"
          class="btn-base p-1.5 rounded-lg transition hover:opacity-80 focus-visible-ring"
          data-theme-bg-tertiary
          style="background-color: var(--bg-tertiary);"
          aria-label="Toggle progress sidebar"
          data-trading-chat-target="progressToggleBtn">
          <svg class="w-4 h-4" data-theme-text-primary style="color: var(--text-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
          </svg>
        </button>
      </div>
      <div class="flex-1 overflow-y-auto p-4 scrollbar-refined" data-trading-chat-target="progressContainer">
        <div class="text-small text-center py-8" data-theme-text-secondary style="color: var(--text-secondary);">
          Progress will appear here...
        </div>
        <div data-trading-chat-target="progressLog" class="space-y-2"></div>
      </div>
    </aside>

    <!-- Chat Messages - Full Width -->
    <main class="flex-1 overflow-y-auto min-w-0" data-trading-chat-target="messagesContainer" style="background-color: var(--bg-primary);">
      <!-- Centered Welcome Message (ChatGPT style) -->
      <div data-trading-chat-target="welcomeScreen" class="flex flex-col items-center justify-center min-h-full px-4 py-8">
        <div class="w-full max-w-3xl">
          <!-- Welcome Title -->
          <div class="text-center mb-8">
            <h1 class="text-heading sm:text-display font-semibold mb-2" data-theme-text-primary style="color: var(--text-primary);">
              How can I help you today?
            </h1>
            <p class="text-small" data-theme-text-secondary style="color: var(--text-secondary);">
              Ask about stocks, technical analysis, account info, or trading insights
            </p>
          </div>

          <!-- Scrollable Examples Grid -->
          <div class="max-h-[60vh] overflow-y-auto scrollbar-refined mb-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <% @examples.each do |category_data| %>
                <div class="card-base card-interactive p-3">
                  <h3 class="text-xs-refined font-semibold mb-2 uppercase tracking-wide" data-theme-text-primary style="color: var(--text-primary);">
                    <%= category_data[:category] %>
                  </h3>
                  <div class="space-y-1.5">
                    <% category_data[:examples].each do |example| %>
                      <button
                        data-action="click->trading-chat#useExample"
                        data-example="<%= example %>"
                        class="btn-secondary w-full text-left px-2.5 py-1.5 text-small transition-all duration-150"
                        style="text-align: left;">
                        <%= example %>
                      </button>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Centered Input Box (ChatGPT style) -->
          <div class="mt-8 w-full max-w-2xl mx-auto">
            <form data-action="submit->trading-chat#submit" class="relative">
              <div class="input-container flex items-end gap-2">
                <div class="flex-1 relative">
                  <textarea data-trading-chat-target="promptCentered" rows="1"
                    placeholder="Message Trading Assistant..."
                    class="w-full bg-transparent border-0 px-0 py-0 text-body placeholder-gray-400 focus:outline-none resize-none overflow-hidden"
                    style="color: var(--text-primary); min-height: 1.25rem; max-height: 12rem; line-height: 1.5;"></textarea>
                </div>
                <button data-trading-chat-target="sendBtnCentered" type="submit"
                  class="btn-base btn-primary h-8 w-8 flex-shrink-0 focus-visible-ring">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Messages Container (Hidden initially) -->
      <div class="w-full px-4 py-4 sm:px-6 sm:py-5 hidden" data-trading-chat-target="messages">
      </div>
    </main>
  </div>

  <!-- Bottom Input Area (Shown when messages exist) -->
  <div data-trading-chat-target="bottomInput" class="header-refined border-t sticky bottom-0 z-30 hidden">
    <form data-action="submit->trading-chat#submit" class="w-full px-3 py-2">
      <div class="flex items-end gap-2">
        <div class="flex-1 relative">
          <textarea data-trading-chat-target="prompt" rows="1"
            placeholder="Ask about stocks, analysis, account... (Enter to send)"
            class="input-base px-3 py-2 text-body placeholder-gray-400 resize-none overflow-hidden focus-visible-ring"
            style="min-height: 2rem; max-height: 8rem; line-height: 1.5;"></textarea>
        </div>
        <button data-trading-chat-target="sendBtn" type="submit"
          class="btn-base btn-primary h-8 w-8 flex-shrink-0 focus-visible-ring">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </button>
      </div>
    </form>
  </div>
</div>

